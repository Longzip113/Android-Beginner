<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/duongdua"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="2dp"
        android:text="Scores: 100"
        android:textColor="#f00"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-103dp"
        android:text=""
        android:textColor="#fff" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="-103dp"
        android:text=""
        android:textColor="#fff" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="-103dp"
        android:text=""
        android:textColor="#fff" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/seekBar"
        android:layout_width="596dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@id/checkBox"
        android:progress="5"
        android:thumb="@drawable/pikachu" />
    />


    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/seekBar1"
        android:layout_width="597dp"
        android:layout_height="50dp"
        android:layout_below="@id/seekBar"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/checkBox1"
        android:progress="5"
        android:thumb="@drawable/pokeball" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/seekBar2"
        android:layout_width="598dp"
        android:layout_height="53dp"
        android:layout_below="@id/seekBar1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/checkBox2"
        android:progress="5"
        android:thumb="@drawable/bullbasaur" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="95dp"
        android:background="@null"
        app:srcCompat="@drawable/playbutton" />
</RelativeLayout>
































