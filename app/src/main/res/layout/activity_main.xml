<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LayoutMain"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textColor="#fff"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text="0" />

    <EditText
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:id="@+id/EditTextMin"
        android:hint="Min"
        android:layout_below="@id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        />
    <EditText
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:id="@+id/EditTextMax"
        android:hint="Max"
        android:layout_below="@id/EditTextMin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        />
    <Button
        android:id="@+id/ButtonRandom"
        android:textAllCaps="false"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditTextMax"
        android:layout_centerHorizontal="true"
        android:text="RanDom"
        />

    <Switch
        android:textColor="#fff"
        android:id="@+id/switch1"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ButtonRandom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="RanDom" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="145dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="37dp"
        android:layout_marginBottom="31dp"
        android:baselineAlignBottom="true"
        android:scaleType="fitXY"

        app:srcCompat="@drawable/appstore" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="142dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="212dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="35dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/chplay" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:background="@null"
        app:srcCompat="@drawable/buttonapple" />

    <CheckBox
        android:id="@+id/checkBoxChangeBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="388dp"
        android:text="Change BackGround"
        android:textColor="#fff" />

    <CheckBox
        android:id="@+id/checkBoxreview"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="388dp"
        android:layout_marginRight="43dp"
        android:text="Good review"
        android:textColor="#fff" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="48dp"
        android:progress="10" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/checkBoxChangeBG"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/textViewSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="26dp"
        android:text="Number seekBar" />
</RelativeLayout>